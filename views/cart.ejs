<%- include('./partials/header') %>
<% user.cart.forEach(function(item) { %>
    <!-- Parent Container -->
    <div class="w-full min-h-screen flex flex-col lg:flex-row items-start px-5 lg:px-20 py-10 gap-10 bg-red-950 text-white">
        <!-- Product Image and Details -->
        <div class="w-full lg:w-[30%] rounded-md overflow-hidden mt-14">
            <div class="w-full h-80 bg-[<%= item.bgcolor %>] flex justify-center items-center">
                <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="" class="h-full max-h-[20rem] object-contain">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                <h3 class="text-2xl">
                    <%= item.name %>
                </h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ <%= item.price %></h2>
            </div>
        </div>
        <!-- Price Breakdown Section -->
        <div class="w-full lg:w-[70%]">
            <h3 class="text-2xl">Price Breakdown</h3>
            <div class="px-5 lg:px-10 mt-5">
                <div class="flex justify-between mt-2">
                    <h4>Total MRP</h4>
                    <h4>₹ <%= item.price %></h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4>Discount on MRP</h4>
                    <h4>₹ <%= Number(item.discount) %></h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4>Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4>Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-amber-500 mt-10"></div>
            <div class="flex justify-between mt-5">
                <h3 class="text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
            </div>
            <form action=""></form>
        </div>
    </div>
<% }) %>
<div class="flex justify-center mt-10 bg-red-950 w-full h-20 items-center" method="post" action="/shop">
    <button class="w-1/2 md:w-1/3 py-3 bottom-[100px] text-2xl font-bold text-black bg-amber-500 rounded-lg tracking-tighter hover:bg-green-500 transition-all duration-300">
        Confirm Order
    </button>
</div>
<%- include('./partials/footer') %>