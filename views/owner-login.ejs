<%- include('./partials/header') %>

<div class="w-full h-screen flex px-20 bg-amber-500">
    <div class="w-1/2 flex items-center justify-center h-screen bg-red-950">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5 text-white">Admin Access</h4>

            <!-- Flash Messages -->
            <% if (error && error.length > 0) { %>
                <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                    <%= error %>
                </div>
            <% } %>
            <% if (success && success.length > 0) { %>
                <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
                    <%= success %>
                </div>
            <% } %>

            <!-- Login Form -->
            <form action="/owners/login" method="post" class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-white">Email</label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        placeholder="Email"
                        class="block bg-transparent placeholder-amber-500 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        required
                    >
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-white">Password</label>
                    <input
                        id="password"
                        name="password"
                        type="password"
                        placeholder="Password"
                        class="block bg-transparent text-white placeholder-amber-500 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        required
                    >
                </div>
                <input
                    class="px-5 rounded-full py-3 mt-2 bg-amber-500 text-black hover:bg-amber-600 transition-all duration-300"
                    type="submit"
                    value="Login"
                >
            </form>
        </div>
        <a class="text-white underline mt-4" href="/owners/create">Create Owner</a>
    </div>
</div>

<%- include('./partials/footer') %>