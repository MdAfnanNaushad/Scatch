<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20">
  <!-- Sidebar Section -->
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex flex-col">
      <a class="block w-fit mb-2 text-blue-500 hover:underline" href="#"
        >All Products</a
      >
      <a class="block w-fit mb-2 text-blue-500 hover:underline" href="#"
        >Create new product</a
      >
    </div>
  </div>

  <!-- Main Content Section -->
  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <!-- Delete All Button -->
    <form action="/admin/delete-all" method="POST">
      <button type="submit" class="text-red-500 mb-3 hover:underline">
        Delete all
      </button>
    </form>

    <!-- Products Grid -->
    <div class="flex items-start gap-5 flex-wrap">
      <% for (let i = 0; i < products.length; i++) { %>
      <div class="w-60 bg-red-500 mb-5 rounded-lg shadow-lg">
        <!-- Product Image -->
        <div
          class="w-full h-52 flex items-center justify-center bg-zinc-700 rounded-t-lg overflow-hidden"
        >
          <img
            class="h-[12rem]"
            src="data:image/jpeg;base64,<%= products[i].image.toString('base64') %>"
            alt="Product Image"
          />
        </div>

        <!-- Product Details -->
        <div class="flex justify-between items-center px-4 py-4">
          <div>
            <h3 class="text-white font-bold"><%= products[i].name %></h3>
            <h4 class="text-amber-400 font-semibold">
              â‚¹ <%= products[i].price %>
            </h4>
          </div>
          <a
            class="w-7 h-7 flex items-center justify-center rounded-full bg-white hover:bg-gray-200"
            href="#"
          >
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
