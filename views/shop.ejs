<%- include('./partials/header') %>
    <% if (success && success.length> 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>
            <div class="w-full h-screen flex items-start gap-10 py-20 bg-red-950 text-white">
                <div class="w-[20%] bg-amber-500 flex h-3/4 mt-10 flex-col  text-black font-semibold items-center rounded-lg text-xl">
                    <div class="flex items-center gap-2 mt-5">
                        <h3>Sort by</h3>
                        <form action="/shop" method="get"> <!--shop data coming from index.js and product data is comng from product-model.js-->
                            <select class="border-[1px] border-zinc-900 px-2 py-1 text-black bg-amber-500" name="sortby"
                                id="">
                                <option value="popular">Popular</option>
                                <option value="newest">Newest</option>
                            </select>
                        </form>
                    </div>
                    <div class="flex flex-col mt-20">
                        <a class="block w-fit mb-2" href="">New Collection</a>
                        <a class="block w-fit mb-2" href="">All Products</a>
                        <a class="block w-fit mb-2" href="">Discounted Products</a>
                    </div>
                    <div class="mt-20 px-5 ">
                        <a class="block w-fit mb-2" href="">Filter by :</a>
                        <a class="block w-fit mb-2" href="">Availability</a>
                        <a class="block w-fit mb-2" href="">Discount</a>
                    </div>
                </div>
                <div class="w-[75%] flex flex-col gap-5 h-screen">
                    <div class="flex items-start gap-5 mt-5">
                        <% products.forEach(function(product){ %><!--from this data a forEah loop has been created where the value named product is enabling the details of the product-->
                            <div class="w-60">
                                <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                                    <img class="h-[12rem]"
                                        src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                                </div>
                                <div
                                    class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                    <div>
                                        <h3>
                                            <%= product.name %>
                                        </h3>
                                        <h4>â‚¹ <%= product.price %>
                                        </h4>
                                    </div>
                                    <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                        href="/addtocart/<%= product._id%>">
                                        <i class="ri-add-line"></i>
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>